-- vim: syntax=haskell
Config { 
   -- appearance
     font        = "xft:Mono:size=12:bold"
   , bgColor     = "#0000FF"
   , fgColor     = "#FFFFFF"
   , position    = Top
   -- layout
   , sepChar  = "%"
   , alignSep = "}{"
   , template = " %UnsafeStdinReader% }    %date%    { %dynnetwork% | %EICK% "
   -- general behavior
   , lowerOnStart     = True
   , hideOnStart      = False
   , allDesktops      = False
   , overrideRedirect = True
   , pickBroadest     = False
   , persistent       = True
   -- plugins
   , commands = [
        -- stdin reader for the workspaces
          Run UnsafeStdinReader
        -- weather monitor
        , Run Weather "EICK" [ "--template", "<station> . <skyCondition> . <tempC>Â°C"] 36000
        -- network activity monitor (dynamic interface resolution)
        , Run DynNetwork     [ "--template", "<tx> <rx> <dev>" ] 10
        -- time and date indicator
        , Run Date           "%Y/%m/%d %T %a %Z" "date" 10
        ]
   }
