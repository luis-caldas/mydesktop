<?xml version="1.0" encoding="UTF-8"?>
<root>
  <keybind key="C-A-t">
    <action name="Execute">
      <execute>sh -c 'TMUX_START=true my_shortcuts_helper.bash command termite -t Terminal'</execute>
    </action>
  </keybind>
  <keybind key="C-A-y">
    <action name="Execute">
      <execute>my_shortcuts_helper.bash command termite -t Terminal</execute>
    </action>
  </keybind>
  <keybind key="C-A-n">
    <action name="Execute">
      <execute>my_shortcuts_helper.bash command firefox</execute>
    </action>
  </keybind>
  <keybind key="C-A-r">
    <action name="Execute">
      <execute>my_shortcuts_helper.bash rofi</execute>
    </action>
  </keybind>
  <keybind key="A-r">
    <action name="Execute">
      <execute>my_shortcuts_helper.bash rofi</execute>
    </action>
    </keybind>
    <!-- This shortcut can be set with xcape to a single key (which is not possible in openbox)-->
  <keybind key="C-A-S-W-p">
    <action name="Execute">
      <execute>my_shortcuts_helper.bash rofi</execute>
    </action>
  </keybind>
  <keybind key="C-A-S-W-o">
    <action name="Execute">
      <execute>my_shortcuts_helper.bash rofi</execute>
    </action>
  </keybind>
  <keybind key="C-A-u">
    <action name="Execute">
      <execute>my_shortcuts_helper.bash clip-qr</execute>
    </action>
  </keybind>
  <keybind key="XF86AudioRaiseVolume">
    <action name="Execute">
      <execute>my_shortcuts_helper.bash volume-up</execute>
    </action>
  </keybind>
  <keybind key="XF86AudioLowerVolume">
    <action name="Execute">
      <execute>my_shortcuts_helper.bash volume-down</execute>
    </action>
  </keybind>
  <keybind key="XF86AudioMute">
    <action name="Execute">
      <execute>my_shortcuts_helper.bash volume-mute</execute>
    </action>
  </keybind>
</root>
