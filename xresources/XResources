! vim: syntax=xdefaults

! {{{ Initial defining

! Font
#define MY_FONT xft:mono:size=11

! Alphas
#define MY_ALPHA 0.94
#define MY_DEC_ALPHA 12

! Borders and spacing
#define MY_BORDER 5
#define MY_INSIDE_SPACING 25
#define MY_INSIDE_SPACING_DB 50
#define MY_INSIDE_SPACING_REM 500
#define MY_OUTSIDE_SPACING 15
#define MY_OUTSIDE_SPACING_DB 30

! Background and foregound
#define MY_ALPHA_BACK  #0D0D0DE0
#define MY_BACKGROUND  #0D0D0D
#define MY_FOREGROUND  #FFFFFF
#define MY_TRANSPARENT #00000000

#define MY_BORDER_COLOUR            #A0A0A0
#define MY_UNACTIVE_BORDER_COLOUR   #404040

! General colours
#define MY_COLOUR_0 #67646F
#define MY_COLOUR_1 #838387
#define MY_COLOUR_2 #ADAAB1
#define MY_COLOUR_3 #494240
#define MY_COLOUR_4 #838387
#define MY_COLOUR_5 #ADAAB1

! Shades
#define MY_SHADE_0 #000000
#define MY_SHADE_1 #AAAAAA
#define MY_SHADE_2 #555555
#define MY_SHADE_3 #FFFFFF

! Greys
#define MY_GREY_0 #BCBCBC
#define MY_GREY_1 #8A8A8A
#define MY_GREY_2 #262626

! }}}

! {{{ Reasigning configs to programs

! Foregrounds and backgrounds
*.foreground:  MY_FOREGROUND
*.background:  MY_BACKGROUND
*.cursorColor: MY_FOREGROUND

! Colours
*.color0:  MY_SHADE_0
*.color1:  MY_COLOUR_0
*.color2:  MY_COLOUR_1
*.color3:  MY_COLOUR_2
*.color4:  MY_COLOUR_3
*.color5:  MY_COLOUR_4
*.color6:  MY_COLOUR_5
*.color7:  MY_SHADE_1
*.color8:  MY_SHADE_2
*.color9:  MY_COLOUR_0
*.color10: MY_COLOUR_1
*.color11: MY_COLOUR_2
*.color12: MY_COLOUR_3
*.color13: MY_COLOUR_4
*.color14: MY_COLOUR_5
*.color15: MY_SHADE_3

! Rofi
rofi.alpha-back: MY_ALPHA_BACK
rofi.border-colour: MY_BORDER_COLOUR
rofi.transparent: MY_TRANSPARENT
rofi.background: MY_BACKGROUND
rofi.foreground: MY_FOREGROUND
rofi.colour0: MY_COLOUR_0
rofi.colour1: MY_COLOUR_1
rofi.colour2: MY_COLOUR_2
rofi.border: MY_BORDER
rofi.space: MY_INSIDE_SPACING
rofi.lines: 6
rofi.line-padding: 10

! Dunst
dunst.border-size: MY_BORDER
dunst.space: MY_OUTSIDE_SPACING_DB
dunst.padding: MY_INSIDE_SPACING_DB
dunst.min-icon-size: 64
dunst.border-colour: MY_UNACTIVE_BORDER_COLOUR
dunst.lbackground: MY_BACKGROUND
dunst.nbackground: MY_SHADE_0
dunst.cbackground: MY_SHADE_1
dunst.foreground: MY_FOREGROUND
dunst.alpha: MY_DEC_ALPHA
dunst.bar-frame: MY_BORDER
dunst.bar-size: 20

! XMonad
xmonad.border: MY_BORDER
xmonad.space: MY_OUTSIDE_SPACING
xmonad.border-colour: MY_UNACTIVE_BORDER_COLOUR
xmonad.border-colour-active: MY_BORDER_COLOUR

! XMobar
xmobar.background: MY_BACKGROUND
xmobar.foreground: MY_FOREGROUND
xmobar.colour0: MY_GREY_0
xmobar.colour1: MY_GREY_1
xmobar.colour2: MY_GREY_2

! St
st.alpha:  MY_ALPHA
st.border: MY_INSIDE_SPACING_REM

! }}}
